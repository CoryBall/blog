datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output = "../prisma/generated/client"
  binaryTargets = ["native", "windows", "linux-musl"]
}

  // Entity Base
  // id                String    @id @db.Uuid @default(uuid())
