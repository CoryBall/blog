{
  "name": "blog-server",
  "version": "0.0.1",
  "main": "server.js",
  "repository": "https://github.com/CoryBall/blog.git",
  "author": "cory ball",
  "license": "MIT",
  "private": false,
  "scripts": {
    "watch": "tsc -w",
    "start": "node -r dotenv/config ./dist/server.js dotenv_config_path=env/dev.env",
    "build": "tsc",
    "start:prod": "node -r dotenv/config ./dist/server.js",
    "dev": "nodemon --watch .env --watch ./src -r dotenv/config --exec ts-node --files src/server.ts dotenv_config_path=env/dev.env",
    "lint": "eslint ./src/** --fix",
    "precommit": "lint-staged",
    "test:unit": "dotenv -e tests/.env.test -- jest --testTimeout=10000 --detectOpenHandles --runInBand \"src/**/*.spec.ts\"",
    "test:integration": "dotenv -e tests/.env.test -- jest --testTimeout=10000 --detectOpenHandles --runInBand \"tests/**/*.integration.spec.ts\"",
    "test:env-unit": "npm run lint && npm run test:env-up && npm run prisma:init && npm run test:unit",
    "test:env-integration": "npm run lint && npm run test:env-up && npm run prisma:init && npm run test:integration",
    "test:env-up": "docker-compose -f tests/docker-compose-test.yml up -d",
    "docker:down": "docker-compose -f tests/docker-compose-test.yml down",
    "prisma:migrate": "npx prisma migrate dev --name",
    "prisma:deploy": "npx prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:init": "dotenv -e ./tests/.env.test -- npx prisma migrate dev --name init"
  },
  "dependencies": {
    "apollo-server-express": "^2.22.2",
    "argon2": "^0.27.2",
    "aws-sdk": "^2.878.0",
    "body-parser": "^1.19.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-redis-subscriptions": "^2.3.1",
    "graphql-subscriptions": "^1.2.1",
    "graphql-upload": "^11.0.0",
    "ioredis": "^4.24.6",
    "jsonwebtoken": "^8.5.1",
    "mime-types": "^2.1.30",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/graphql-upload": "^8.0.4",
    "@types/ioredis": "^4.22.2",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^14.14.37",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "prisma": "^2.29.1",
    "ts-node": "^9.1.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [],
    "exec": "ts-node ./src/server.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  }
}
